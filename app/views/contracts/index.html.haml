%h3
  Contracts:
  = @contracts.count
%p

.row
  .col-md-2
    = search_form_for @ransack_contracts, as: :contracts_search, url: contracts_path do |f|
      = f.label :title
      = f.search_field :title_cont, placeholder: 'Title', class: 'form-control form-control-sm'
      = f.label :description
      = f.search_field :description_cont, placeholder: 'Description', class: 'form-control form-control-sm'
      = f.label :price
      = f.search_field :price_eq, placeholder: 'Price', class: 'form-control form-control-sm'
      = f.label :estimated_price
      = f.search_field :estimated_price_eq, placeholder: 'Estimated Price', class: 'form-control form-control-sm'
      = f.search_field :user_email_cont, placeholder: 'Email', class: 'form-control form-control-sm'
      = f.submit
      = link_to 'refresh', contracts_path
  .col-md-10
    .card-columns
      - @contracts.each do |contract|
        = render 'contracts/contract', contract: contract
  %br 